{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,  // Permite la emisión de archivos en producción
    "moduleResolution": "node16",
    "outDir": "./dist",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "src/web/src/store.d.ts"]
}
