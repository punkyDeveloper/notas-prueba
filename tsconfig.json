{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "esnext",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true, // Habilitar esta opci√≥n
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}